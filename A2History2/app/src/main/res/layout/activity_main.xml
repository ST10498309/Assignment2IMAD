<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wpl"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="394dp"
        android:layout_height="212dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="49dp"
        android:background="#383535"
        android:text="Get ready to explore the key moments, figures, and battles of the Second World War. Challenge your knowledge of this crucial time in history. Tap Start to begin your journey into the past!"
        android:textAlignment="center"
        android:textColor="#EDE8E8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="345dp"
        android:layout_height="142dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="51dp"
        android:text="Welcome to your World War 2 Quiz Challenge!"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="218dp"
        android:layout_height="74dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="91dp"
        android:backgroundTint="#2196F3"
        android:text="start"
        android:textColor="#EBDFDF"
        android:textColorHint="#EDEAEA"
        android:textColorLink="#040303"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>