<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F6D6D"
    android:backgroundTint="#6F6D6D"
    tools:context=".Questions">

    <TextView
        android:id="@+id/txtQuestions"
        android:layout_width="302dp"
        android:layout_height="110dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="65dp"
        android:text="Questions "
        android:textAlignment="center"
        android:textColor="#F4EEEE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="376dp"
        android:layout_height="72dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#0B0B0B"
        android:text="True "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgQuestion" />

    <Button
        android:id="@+id/btnFalse"
        android:layout_width="379dp"
        android:layout_height="72dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="#0F0E0E"
        android:text="False "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTrue" />

    <ImageView
        android:id="@+id/imgQuestion"
        android:layout_width="318dp"
        android:layout_height="184dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestions"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="151dp"
        android:backgroundTint="#2196F3"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFalse" />

</androidx.constraintlayout.widget.ConstraintLayout>